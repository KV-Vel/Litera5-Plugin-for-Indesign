{
    "compilerOptions": {
        "strict": true,
        "composite": true,
        "moduleResolution": "bundler",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noImplicitAny": true,
        "types": ["@adobe/cc-ext-uxp-types", "@types/node"]
    },
    "include": ["./src"]
}
